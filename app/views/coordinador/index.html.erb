                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <br>
                <%= link_to 'Nueva Aula', new_aula_path,class:'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>

        <!-- DEPARTAMENTOS -->

        <div id="listDepartamentos" style="display: none;"  >
          <div class="form-content">
            <div class="row-fluid">
              <div class="container">
                <table class="table table-hover">
