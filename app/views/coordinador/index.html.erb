function mostrar_motivos(){
document.getElementById('listmotivos').style.display = 'block';
document.getElementById('gato').className = "active";
}
function ocultar_motivos(){
document.getElementById('listmotivos').style.display = 'none';
document.getElementById('gato').className = "";
}

function mostrar_aulas(){
document.getElementById('listAulas').style.display = 'block';
document.getElementById('gatito').className = "active";
}
