document.getElementById('listAulas').style.display = 'none';
document.getElementById('gatito').className = "";
}

function mostrar_departamentos(){
document.getElementById('listDepartamentos').style.display = 'block';
document.getElementById('dpto').className = "active";
}
function ocultar_departamentos(){
document.getElementById('listDepartamentos').style.display = 'none';
document.getElementById('dpto').className = "";
}

function mostrar_wuacho(){
document.getElementById('wuacho').className = "open";
}
</script>

