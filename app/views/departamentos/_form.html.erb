

<div class="titulo-form-corp"><h2>Registro de Departamentos</h2></div>
<hr class="hr_corp"></hr>
<div class="border-form-div-corp">  
  <h4 align="center">Ingrese los datos</h4>
  <hr>
  <div class="cont-col-corp">  
    <%= form_for(@departamento) do |f| %>
      <% if @departamento.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@departamento.errors.count, "error") %> prohibited this departamento from being saved:</h2>

          <ul>
          <% @departamento.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
        <div class="field-corp" class="f-control">
          <%= f.label :nombre_del_departamento %><br>
          <%= f.text_field :nombre %>
        </div>
        <div class="actions">
          <%= f.submit "Aceptar",:class=>'btn btn-primario-azul' %>
          <%= link_to 'Volver', departamentos_path, :class=>'btn btn-success' %>
        </div>
    <% end %>
  </div>
  <hr>
  <div class="pie-formulario">
    <p class="mensaje-pie-formulario">Mensaje final del formulario</p>
    <br>
  </div>
</div>
