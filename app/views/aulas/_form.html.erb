<div class="titulo-form-corp"><h2>Registro de Aulas</h2></div>
<hr class="hr_corp"></hr>
<div class="border-form-div-corp">  
  <h4 align="center">Ingrese los datos</h4>
  <hr>
  <div class="cont-col-corp">  
    <%= form_for(@aula) do |f| %>
      <% if @aula.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@aula.errors.count, "error") %> prohibited this aula from being saved:</h2>

          <ul>
          <% @aula.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field-corp" class="f-control">
        <%= f.label :nombre_del_aula %><br>
        <%= f.text_field :nombre %>
      </div>
      <div class="field-corp" class="f-control">
        <%= f.label :capacidad_del_aula %><br>
        <%= f.text_field :capacidad %>
      </div>
      <%#= @aula.aleatorio(6) %> <!--ver metodo en el modelo-->
      <div class="actions">
        <%= f.submit "Aceptar",:class=>'btn btn-primario-azul' %>
        <%= link_to 'Volver', aulas_path, :class=>'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <hr>
  <div class="pie-formulario">
    <p class="mensaje-pie-formulario">Mensaje final del formulario</p><br>
  </div>
</div>